<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Vista de cÃ¡mara OpenCV (ocupa lado izquierdo) -->
    <org.opencv.android.JavaCameraView
        android:id="@+id/camera_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sidebar_container"
        app:layout_constraintWidth_percent="0.60"
        opencv:camera_id="any"
        opencv:show_fps="false" />

    <!-- Panel lateral derecho para gamificaciÃ³n y detecciÃ³n -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/md_theme_light_surface"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/camera_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.40">

        <!-- Header con estadÃ­sticas de gamificaciÃ³n -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/md_theme_light_primaryContainer"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- TÃ­tulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ SesiÃ³n Actual"
                    android:textSize="16sp"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <!-- Grid de estadÃ­sticas -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- SeÃ±as detectadas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_detections_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_primary"
                            android:fontFamily="sans-serif-bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detectadas"
                            android:textSize="11sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>

                    <!-- Racha actual -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_streak_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_tertiary"
                            android:fontFamily="sans-serif-bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ Racha"
                            android:textSize="11sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>

                    <!-- PuntuaciÃ³n -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_secondary"
                            android:fontFamily="sans-serif-bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­ Puntos"
                            android:textSize="11sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>

                    <!-- PrecisiÃ³n promedio -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_avg_confidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="24sp"
                            android:textColor="@color/md_theme_light_error"
                            android:fontFamily="sans-serif-bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PrecisiÃ³n"
                            android:textSize="11sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card de detecciÃ³n actual -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detection_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:cardElevation="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/md_theme_light_surface"
            app:strokeWidth="2dp"
            app:strokeColor="@color/md_theme_light_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Etiqueta "SeÃ±al detectada" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ SeÃ±al detectada"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <!-- Texto de la seÃ±a detectada (grande) -->
                <TextView
                    android:id="@+id/tv_detected_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letra A"
                    android:textSize="28sp"
                    android:textColor="@color/md_theme_light_primary"
                    android:fontFamily="sans-serif-bold"
                    android:layout_marginBottom="12dp" />

                <!-- Contenedor para confianza -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Label "Confianza" -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confianza"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:fontFamily="sans-serif" />

                    <!-- Porcentaje de confianza -->
                    <TextView
                        android:id="@+id/tv_confidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textSize="16sp"
                        android:textColor="@color/md_theme_light_primary"
                        android:fontFamily="sans-serif-bold"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Barra de progreso Material 3 -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_confidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:indicatorColor="@color/md_theme_light_tertiary"
                    app:trackColor="@color/md_theme_light_surfaceVariant"
                    app:trackCornerRadius="4dp"
                    app:trackThickness="6dp"
                    android:max="100"
                    android:progress="95" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Historial de seÃ±as Ãºnicas detectadas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/md_theme_light_surfaceVariant"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ SeÃ±as en esta sesiÃ³n"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <!-- ScrollView para historial -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/history_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Las seÃ±as detectadas se agregarÃ¡n dinÃ¡micamente aquÃ­ -->
                        <TextView
                            android:id="@+id/tv_empty_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AÃºn no hay seÃ±as detectadas.\nÂ¡Empieza a practicar!"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant"
                            android:gravity="center"
                            android:padding="16dp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃ³n flotante para regresar (compacto) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Salir"
            android:textSize="14sp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="start"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.TonalButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
