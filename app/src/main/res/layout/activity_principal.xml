<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".Principal">

    <!-- CONTENIDO PRINCIPAL CON EDGE-TO-EDGE -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurface">

        <!-- AppBarLayout con Material 3 -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true"
            android:background="@android:color/transparent">

            <!-- TopAppBar Material 3 -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="0dp"
                app:titleTextColor="?attr/colorOnPrimary"
                app:navigationIconTint="?attr/colorOnPrimary"
                app:menu="@menu/drawer_menu"
                style="@style/Widget.Material3.Toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Contenido principal con scroll -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card de bienvenida con mascota -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/animatedTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Â¡Hola! ðŸ‘‹\nBienvenid@ a LSMÃ³vil, aquÃ­ puedes elegir entre traducir o aprender."
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginEnd="16dp" />

                        <ImageView
                            android:id="@+id/imageViewLogo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="fitCenter"
                            android:contentDescription="Mascota LSMovil"
                            app:srcCompat="@drawable/mascotalsm" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- SecciÃ³n: Â¿QuÃ© deseas hacer? -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â¿QuÃ© deseas hacer?"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Grid de opciones principales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Traducir -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTraducir"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="?attr/colorSecondaryContainer"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/imageButton"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Traducir"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_traducir" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:gravity="center_vertical|end"
                                android:text="TRADUCIR"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="50sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Aprender -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAprender"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/md_theme_light_tertiaryContainer"
                        app:cardCornerRadius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:gravity="center_vertical|start"
                                android:text="APRENDER"
                                android:textColor="@color/md_theme_dark_inverseOnSurface"
                                android:textSize="50sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageButton2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Aprender"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_aprender" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Espaciador para navigation bar -->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- NAVIGATION DRAWER MEJORADO -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconSize="24dp"
        app:itemVerticalPadding="12dp"
        app:itemHorizontalPadding="16dp"
        app:itemTextAppearance="@style/CustomNavigationMenu"
        app:itemIconTint="@color/nav_item_icon_color"
        app:itemTextColor="@color/nav_item_text_color"
        app:itemShapeFillColor="@color/nav_item_background"
        app:itemShapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:itemShapeInsetStart="12dp"
        app:itemShapeInsetEnd="12dp"
        app:itemShapeInsetTop="4dp"
        app:itemShapeInsetBottom="4dp"
        app:itemRippleColor="?attr/colorPrimaryContainer"
        android:background="?attr/colorSurface"
        style="@style/Widget.Material3.NavigationView" />

</androidx.drawerlayout.widget.DrawerLayout>
