<resources>
    <!-- Estilo personalizado para SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/dark_gray</item> <!-- Fondo gris oscuro -->
        <item name="android:textColor">@color/white</item> <!-- Texto blanco -->
        <item name="android:textColorHint">@color/gray</item> <!-- Texto de hint gris -->
        <item name="android:editTextColor">@color/white</item>
        <item name="queryHint">@string/buscar_profesores</item><!-- Color de texto del EditText blanco -->
    </style>

    <style name="CustomNavigationMenu" parent="Widget.Design.NavigationView">
        <item name="android:textSize">18sp</item> <!-- TamaÃ±o de fuente -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color negro -->
        <item name="android:textStyle">bold</item> <!-- Negritas -->
        <item name="android:background">#1F538B</item>
    </style>

    <string name="buscar_profesores">Buscar profesores...</string>
</resources>