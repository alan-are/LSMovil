<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurface">

        <!-- Header con número -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="?attr/colorSecondaryContainer"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewNumeroDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/btnCerrarDialog"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Cerrar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="?attr/colorOnSecondaryContainer" />
        </LinearLayout>

        <!-- Imagen ampliada -->
        <ImageView
            android:id="@+id/imageViewNumeroDialog"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:contentDescription="Seña ampliada"
            android:padding="16dp"
            android:background="?attr/colorSurfaceVariant" />

        <!-- Descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cómo hacer la seña:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewDescripcionDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción de cómo hacer la seña"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
