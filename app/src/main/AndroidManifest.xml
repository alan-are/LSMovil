<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permisos para captura de dataset y detección LSM -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Características de cámara -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icono"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.App"
        tools:targetApi="31">

        <activity
            android:name=".Principal"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- MainActivity es ahora la pantalla inicial -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Inicio"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".SoporteActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AcercaActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ConfiguracionActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AprenderActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AbecedarioActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NumerosActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <!-- Actividad para traducir señas LSM en tiempo real -->
        <activity
            android:name=".TraducirActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.App" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>